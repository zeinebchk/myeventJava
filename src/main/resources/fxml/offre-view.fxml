<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>

<?import javafx.scene.control.ChoiceBox?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myevent.controllers.OffreFormController">
    <top>
        <VBox prefWidth="600" style="-fx-background-color: #333333;">
            <MenuBar prefHeight="43.0" prefWidth="600.0" style="-fx-background-color: pink;">
                <Menu text="--">
                    <MenuItem text="Open" />
                    <MenuItem text="Save" />
                    <MenuItem text="Exit" />
                </Menu>
                <Menu text="Edit">
                    <MenuItem text="Cut" />
                    <MenuItem text="Copy" />
                    <MenuItem text="Paste" />
                </Menu>
                <Menu text="profile">
                    <MenuItem text="About" />
                    <MenuItem text="Documentation" />
                </Menu>
            </MenuBar>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20px; -fx-border-color: #cccccc; -fx-border-width: 2px;">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Formulaire d'ajout d'offre" />
            <GridPane hgap="10" vgap="10">
                <Label text="Titre :" />
                <TextField fx:id="titreField" promptText="Entrez le titre" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Description :" />
                <TextField fx:id="descriptionField" promptText="Entrez la description" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Prix Initial :" />
                <TextField fx:id="prixInitialField" promptText="Entrez le prix initial" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Prix Remise :" />
                <TextField fx:id="prixRemiseField" promptText="Entrez le prix remisé" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Date Fin Remise :" />
                <DatePicker fx:id="dateFinRemisePicker" promptText="Sélectionnez la date" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Surface :" />
                <TextField fx:id="surfaceField" promptText="Entrez la surface" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="Adresse :" />
                <TextField fx:id="adresseField" promptText="Entrez l'adresse" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                <Label text="Capacité :" />
                <TextField fx:id="capaciteField" promptText="Entrez la capacité" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                <ChoiceBox fx:id="gouverneratField" prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="8">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Sfax" />
                            <String fx:value="Tunis" />
                            <String fx:value="Monastir" />
                            <String fx:value="Sousse" />
                        </FXCollections>
                    </items>
                </ChoiceBox>

                <ChoiceBox fx:id="villeField" prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="9">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Monastir" />
                            <String fx:value="Moknine" />
                            <String fx:value="Sahline" />
                        </FXCollections>
                    </items>
                </ChoiceBox>

                <Label text="Options Inclus :" />
                <TextField fx:id="optionsInclusField" promptText="Entrez les options inclus" GridPane.columnIndex="1" GridPane.rowIndex="10" />

                <Button fx:id="ajouterOffre" mnemonicParsing="false" onAction="#handleAjouterOffre" text="Ajouter Offre" GridPane.columnIndex="1" GridPane.rowIndex="11" />
            </GridPane>
            <Label fx:id="imageName" text="Importer votre photo" style="-fx-padding: 10px;" />
            <Button text="Importer" onAction="#onUploadButtonClick" />
        </VBox>
    </center>
</BorderPane>
